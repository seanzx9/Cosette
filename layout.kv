<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: 0, 5, 0, 0
		canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

		Label:
			id: output_field
			pos: (0, 0)
			test: "hi"
			size_hint: (1, 1)
			font_size: 20
			color: 0.1, 0.1, 0.1, 1
			font_name: "Roboto-Regular"
			text_size: self.size

		TextInput:
			id: input_field
			multiline: False
			size_hint: (1, None)
			font_size: 16
			font_name: "Roboto-Regular"
			foreground_color: 0.1, 0.1, 0.1, 1
			height: "30dp"
			on_text_validate: root.process_input()
			text_validate_unfocus: False
			focus: True