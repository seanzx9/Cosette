<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            Label:
                id: output_field
                pos: (0, 0)
                text: "Hi, I'm Cosette. What would you like?"
                size_hint_y: None
                height: self.texture_size[1]
                font_size: 16
                color: 0.1, 0.1, 0.1, 1
                font_name: "Roboto-Regular"
                text_size: self.width, None
                padding: 5, 10

		TextInput:
			id: input_field
			multiline: False
			size_hint: (1, None)
			font_size: 16
			font_name: "Roboto-Regular"
			foreground_color: 0.1, 0.1, 0.1, 1
			height: "30dp"
			on_text_validate: root.process_input()
			text_validate_unfocus: False
			focus: True